<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:theme="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="16pt"
        android:id="@+id/view_to"
        android:layout_toLeftOf="@+id/b_save"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textSize="12pt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="12pt"
        android:id="@+id/view_what"
        android:layout_below="@+id/view_to"
        android:layout_toLeftOf="@+id/b_save"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:textColor="#000000"
        android:textSize="8pt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/b_send"
        android:id="@+id/b_save"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="sendSms"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/invisible"
        android:layout_below="@+id/b_save"
        android:layout_toRightOf="@+id/view_what"
        android:layout_toEndOf="@+id/view_what" />
</RelativeLayout>